<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <!-- Главный-главный экран -->
    <sys:String x:Key="mw/greeting">Добро пожаловать!</sys:String>
    <sys:String x:Key="mw/whatis">UPPPD Generator — программа для автоматизированной генерации отчетов. Создавайте шаблоны документов и не тратьте время на его оформление при заполнении!</sys:String>
    <sys:String x:Key="mw/login">Войти</sys:String>
    <sys:String x:Key="mw/asguest">Пропустить вход</sys:String>
    <sys:String x:Key="mw/reg">Зарегистрироваться</sys:String>
    <sys:String x:Key="mw/back">Назад</sys:String>

    <!-- Ошибки -->
    <sys:String x:Key="errs/reqfield">* Обязательное поле</sys:String>
    <sys:String x:Key="errs/wrongemail">* Проверьте адрес электронной почты</sys:String>
    <sys:String x:Key="errs/rpass">* Пароли не совпадают</sys:String>
    <sys:String x:Key="errs/auth/wrongauthdata">* Неправильный логин или пароль!</sys:String>
    <sys:String x:Key="errs/confirm/wrongcode">* Код неверен.</sys:String>

    <!-- Авторизация -->
    <sys:String x:Key="mw/email">Адрес электронной почты</sys:String>
    <sys:String x:Key="mw/pass">Пароль</sys:String>
    <sys:String x:Key="mw/reg/nhaveacc">Нет аккаунта?</sys:String>

    <!-- регистрация -->
    <sys:String x:Key="mw/reg/haveacc">Есть аккаунт?</sys:String>
    <sys:String x:Key="mw/reg/f">Фамилия</sys:String>
    <sys:String x:Key="mw/reg/i">Имя</sys:String>
    <sys:String x:Key="mw/reg/o">Отчество</sys:String>
    
    <sys:String x:Key="mw/reg/pass">Придумайте пароль</sys:String>
    <sys:String x:Key="mw/reg/rpass">Повторите пароль</sys:String>
    <sys:String x:Key="mw/reg/pass/containssmallletter">Содержит строчную букву</sys:String>
    <sys:String x:Key="mw/reg/pass/containslargeletter">Содержит заглавную букву</sys:String>
    <sys:String x:Key="mw/reg/pass/containsspecsymbol">Содержит специальный символ: !, №, #, $, % и др.</sys:String>
    <sys:String x:Key="mw/reg/pass/containsdigit">Содержит цифру: 0, 1, ... , 8, 9</sys:String>
    <sys:String x:Key="mw/reg/pass/containseightcharacters">Содержит всего 8 и более символов</sys:String>

    <!-- Подтверждение регистрации -->
    <sys:String x:Key="mw/confirm/whathappens">На адрес электронной почты, указанной Вами при регистрации, направлено письмо с кодом подтверждения регистрации. Укажите его в поле ниже.</sys:String>
    <sys:String x:Key="mw/confirm/hint">Он имеет 6-значный формат, состоит из латинских букв и цифр, например, 123ABC</sys:String>
    <sys:String x:Key="mw/confirm/code">Код:</sys:String>
    <sys:String x:Key="mw/confirm/cancel">Отмена</sys:String>
    <sys:String x:Key="mw/confirm/ok">Подтвердить</sys:String>
    
    
    
    
    
    
    <!-- ГЛАВНОЕ ОКНО -->
    <sys:String x:Key="m/title">Главная</sys:String>
    
    <sys:String x:Key="m/1">Новый шаблон</sys:String>
    <sys:String x:Key="m/2">Заполнить</sys:String>
    <sys:String x:Key="m/3">Мои шаблоны</sys:String>
    <sys:String x:Key="m/4">Настройки</sys:String>
    <sys:String x:Key="m/5">Выйти из системы</sys:String>

    <sys:String x:Key="m/1/title">Создать новый шаблон</sys:String>
    <sys:String x:Key="m/1/name">Дайте название шаблону:</sys:String>
    <sys:String x:Key="m/1/makepass">Защитить шаблон паролем</sys:String>
    <sys:String x:Key="m/1/useExternalTitle">Использовать готовый титульный лист</sys:String>
    <sys:String x:Key="m/1/writepass">Задайте пароль для шаблона:</sys:String>

    <sys:String x:Key="m/1/ok">Далее</sys:String>
    <sys:String x:Key="m/1/back">Отмена</sys:String>
    <sys:String x:Key="m/5/back">Назад</sys:String>
    <sys:String x:Key="m/5/logout">Выйти</sys:String>

    


</ResourceDictionary>