<UserControl x:Class="UPPPDGenerator.Windows.Elements.ErrorContainerOnMainScr"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UPPPDGenerator.Windows.Elements"
             mc:Ignorable="d">
    <!-- Контейнер сообщения -->
    <Border x:Name="ErrorMessagePanel"
                Background="#DD3333"
                CornerRadius="6"
                Padding="10"
                Opacity="0"
                Visibility="Collapsed">
        <StackPanel Orientation="Horizontal">
            <Image VerticalAlignment="Stretch" HorizontalAlignment="Center" Height="20"  x:Name="ErrorIcon"/>
            <TextBlock x:Name="ErrorMessageText"
                           Foreground="White"
                           FontWeight="SemiBold"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"
                       Margin="10,0,0,0"
                           Width="300"/>
        </StackPanel>
    </Border>
</UserControl>
