<UserControl x:Class="UPPPDGenerator.Windows.Elements.PasswordBoxOnMainScr"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UPPPDGenerator.Windows.Elements"
             mc:Ignorable="d" 
             x:Name="root"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- Видимый пароль -->
        <TextBox x:Name="VisiblePasswordBox"
                 Background="#343434"
                 Foreground="White"
                 FontFamily="{StaticResource Comfortaa}"
                 FontSize="16"
                 Padding="7"
                 BorderThickness="0"
                 Visibility="Collapsed"
                 VerticalContentAlignment="Center"
                 Margin="5,5,35,0"/>

        <!-- Скрытый пароль PasswordChanged="HiddenPasswordBox_PasswordChanged"-->
        <PasswordBox x:Name="HiddenPasswordBox"
                     Background="#343434"
                     Foreground="White"
                     FontFamily="{StaticResource Comfortaa}"
                     FontSize="16"
                     Padding="7"
                     BorderThickness="0"
                     VerticalContentAlignment="Center"
                     Margin="5,5,35,0"
                     />

        <!-- Плейсхолдер -->
        <TextBlock x:Name="PlaceholderText"
                   Text="{Binding PasswordPlaceholder, ElementName=root}"
                   Foreground="Gray"
                   FontFamily="{StaticResource Comfortaa}"
                   FontSize="16"
                   IsHitTestVisible="False"
                   Margin="10,5,35,0"
                   VerticalAlignment="Center" Padding="5"
                   Visibility="Visible"/>

        <!-- Кнопка-переключатель видимости HiddenPasswordBox_PasswordChanged-->
        <Button x:Name="ToggleVisibilityButton"
                Width="30" Height="30"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Background="Transparent"
                BorderThickness="0"
                Margin="0,5,5,0"
                Click="ToggleVisibilityButton_Click">
            <Image x:Name="VisibilityImage"
                   Source="/resources/imgs/eye-fill.png"
                   Width="20" Height="20"/>
        </Button>
    </Grid>
</UserControl>
